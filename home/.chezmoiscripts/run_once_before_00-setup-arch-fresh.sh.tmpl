#!/bin/bash
# ==============================================================================
# 00-SETUP-ARCH-FRESH
# Bootstrap script for fresh Arch Linux installations
# Handles: sudo installation, user creation, pacman keyring, base packages
# ==============================================================================

set -euo pipefail

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
